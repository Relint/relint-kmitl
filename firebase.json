{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "site": "relint",
    "public": "/client/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "**",
        "function": "app"
      }
    ]
  }
}
